<div class="container content-starter">
    <div class="row">
        <div class="col-lg-12">
            <h1>Dashboard</h1>
        </div>
    </div>
</div>
<div class="container">

<div class="row">
    <div class="col-md-6">
        <div class="box-title"><h3>Recent Activities</h3></div>
        <div class="box-content with-no-space">
            <table class="table table-striped">
                       <thead>
                       <tr>
                           <th>ID</th>
                           <th>Start</th>
                           <th>End</th>
                       </tr>
                       </thead>
                       <tbody>
                       {{#each activities}}
                       <tr>
                       <td><a href="{{url "/activity.jag"}}?id={{this.id}}">{{this.id}}</a></td>
                       <td>{{this.startTime}}</td>
                       <td>{{this.endTime}}</td>
                       </tr>
                       {{/each}}

                   </tbody>
               </table>

        </div>

    </div>
    <div class="col-md-6">
        <div class="box-title"><h3>Search Activities</h3></div>
        <div class="box-content">
            <div class="icon-search icon-search-dashboard icon-marketing-styles pull-right"></div>
                <label>Activity ID</label>
                <input class="input-medium" type="text" />

                <label>Start Time</label>
                <div id="datetimepicker1" class="input-append datetimepicker">
                    <input data-format="MM/dd/yyyy HH:mm:ss PP" type="text"></input>
                    <span class="add-on">
                      <i data-time-icon="icon-time" data-date-icon="icon-calendar">
                      </i>
                    </span>
                    <div class="help-block">MM/dd/yyyy HH:mm:ss PP</div>
                </div>


                <label>End Time</label>
                <div id="datetimepicker2" class="input-append datetimepicker">
                    <input data-format="MM/dd/yyyy HH:mm:ss PP" type="text"></input>
                    <span class="add-on">
                      <i data-time-icon="icon-time" data-date-icon="icon-calendar">
                      </i>
                    </span>
                    <div class="help-block">MM/dd/yyyy HH:mm:ss PP</div>
                </div>

            <p><input type="submit" value="Search" class="btn btn-primary"/> </p>
        </div>
    </div>


</div>


<hr>


</div>
<script type="text/javascript">
  $(function() {
    $('#datetimepicker1').datetimepicker({
        language: 'en',
              pick12HourFormat: true
    });
    $('#datetimepicker2').datetimepicker({
        language: 'en',
              pick12HourFormat: true
    });
  });
</script>